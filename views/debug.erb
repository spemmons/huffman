    <tr class="<%= cycle('gray_row', '') %>"><td>request.xhr?</td><td><%= request.xhr? %></td></tr>
    <tr class="<%= cycle('gray_row', '') %>"><td>request.url</td><td><%= request.url %></td></tr>
    <tr class="<%= cycle('gray_row', '') %>"><td>request.path</td><td><%= request.path %></td></tr>
    <tr class="<%= cycle('gray_row', '') %>"><td>request.ip</td><td><%= request.ip %></td></tr>
    <tr class="<%= cycle('gray_row', '') %>"><td>request.secure?</td><td><%= request.secure? %></td></tr>
    <tr class="<%= cycle('gray_row', '') %>"><td>request.forwarded?</td><td><%= request.forwarded? %></td></tr>
    <tr><td>&nbsp;</td></tr>
    <tr class="header"><td colspan="10">Environment</td></tr>
    <tr><th>Attribute</th><th>Value</th></tr>
    <% request.env.keys.sort.each do |key| %>
        <tr class="<%= cycle('gray_row', '') %>"><td><%= key %></td><td><%= truncate(request.env[key]) %></td></tr>
    <% end %>
</table>